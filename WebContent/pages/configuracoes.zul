<?page title="Confirmação de Cadastro" contentType="text/html;charset=UTF-8"?>
<?init class="br.ufjf.tcc.controller.AuthController"?>
<zk>
	<window id="settings" title="Configurações da Conta" width="350px"
		border="normal" position="center,center" closable="true"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('br.ufjf.tcc.controller.ConfiguracoesController')"
		onClose="self.setVisible(false); event.stopPropagation();" >

		<grid>
			<rows>
				<row>
					<label value="Nova senha: " />
					<textbox id="pswd1" width="100%" />
				</row>
				<row>
					<label value="Re-digite a nova senha: " />
					<textbox id="pswd2" width="100%" />
				</row>
			</rows>
		</grid>
		<div align="center" style="margin-top:3px;">
			<button label="Salvar"
				onClick="@command('updateSettings', pswd1=pswd1.value, pswd2=pswd2.value, window=settings)" />
		</div>
	</window>
</zk>